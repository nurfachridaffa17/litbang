<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- _____ Workflow Model NamaModel _____ -->
		<record id="wkf_tnde" model="workflow">
      		<field name="name">tnde.workflow</field>
            <field name="osv">tnde.tnde</field>
            <field name="on_create">True</field>
       	</record>
       	
       	<!-- _____ Activity Workflow _____ -->
       	<!--  Start -->
      	<record id="act_draft" model="workflow.activity" >
            <field name="name">draft</field>
            <field name="wkf_id" ref="wkf_NamaModel"/>
            <field name="flow_start">True</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'draft'})</field>
        </record>        	
       	
      	<record id="act_confirmed" model="workflow.activity">
            <field name="name">confirmed</field>
            <field name="wkf_id" ref="wkf_NamaModel"/>
            <field name="kind">function</field>
            <field name="action">write({'state':'confirmed'})</field>
        </record> 
        
        <!-- Stop -->
      	<record id="act_done" model="workflow.activity">
            <field name="name">done</field>
            <field name="wkf_id" ref="wkf_NamaModel"/>
            <field name="kind">function</field>
            <field name="flow_stop">True</field>
            <field name="action">write({'state':'done'})</field>
        </record>         
        
        <!-- _____ Transition Workflow _____ -->
      	<record id="trans_draft_to_confirmed" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_confirmed"/>
            <field name="signal">signal_confirmed</field>
        </record>                	
        
         <record id="trans_confirmed_to_draft" model="workflow.transition">
            <field name="act_from" ref="act_confirmed"/>
            <field name="act_to" ref="act_draft"/>
            <field name="signal">signal_draft</field>
        </record>   
       	
       	<record id="trans_confirmed_to_done" model="workflow.transition">
            <field name="act_from" ref="act_confirmed"/>
            <field name="act_to" ref="act_done"/>
            <field name="signal">signal_done</field>
        </record>   
       	
	</data>
</odoo>