<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>

		<!-- _____ A4 Portrait Paperformat _____ -->
		<record id="format_A4" model="report.paperformat">
			<field name="name">Kertas A4</field>
			<field name="default" eval="True" />
			<field name="format">A4</field>
			<field name="page_height">0</field>
			<field name="page_width">0</field>
			<field name="orientation">Portrait</field>  <!-- Landscape -->
			<field name="margin_top">40</field>
			<field name="margin_bottom">23</field>
			<field name="margin_left">7</field>
			<field name="margin_right">7</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">35</field>
			<field name="dpi">90</field>
		</record>

		<!-- _____ surat.masuk.disposisi report registration _____ -->
		<report id="surat_keluar_action_report_lembar_disposisi"
			string="Cetak Surat Keluar" model="surat_keluar"
			report_type="qweb-html" name="tnde.surat_keluar_report"
			paperformat="format_A4" file="tnde.surat_keluar" />
		<!-- paperformat="A4_Landscape" -->


		<!-- _____ surat.masuk.disposisi report template _____ -->
		<template id="surat_keluar_report">
			<t t-call="report.html_container">
				<!-- <t t-call="report.external_layout"> report.internal_layout -->
				<div class="page">
					<!-- Konten Laporan disini -->
					<div t-foreach="docs" t-as="o" class="row mt4 mb4">
					 	<span t-field="o.prev_surat_keluar" />
					</div>
				</div> <!-- class page -->
				<!-- </t> -->
			</t>
		</template>

	</data>
</odoo>