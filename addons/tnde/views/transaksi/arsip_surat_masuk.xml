<odoo>
	<data>
		<record model="ir.ui.view" id="arsip_surat_masuk_view_form_id">
			<field name="name">Arsip Surat Masuk form</field>
			<field name="model">arsip_surat_masuk</field>
			<field name="arch" type="xml">
				<form string="arsip_surat_masuk Form">
					<header> </header>  
				<sheet>
					<div class="oe_title">
						<label for="name" class="oe_edit_only" string="Arsip Surat Masuk" />
						<h2>
							<field name="name"/> 
							<field name="no_arsip" invisible="1"/> 
							<field name="no_urut" invisible="1"/>
						</h2>
					</div>
					<group>
					    <field name="kode_klasifikasi"/>
					 	<field name="kode_primer" />					 	
					 	<field name="kode_sekunder"/>
					 	<field name="id_surat_masuk" options="{'no_create':true}"/>
					</group>
				</sheet>
				</form>
			</field>
		</record>


		<!--  ________ berita view tree _______-->
	<record model="ir.ui.view" id="arsip_surat_masuk_view_tree_id">
	    <field name="name">arsip_surat_masuk.list</field>
	    <field name="model">arsip_surat_masuk</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (tree) -->
			<tree string="berita list">
		    	<field name="name"/>
   			 	<field name="no_arsip"/> 
   			 	<field name="id_surat_masuk"/>
			</tree>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ berita view search _______-->
	<record model="ir.ui.view" id="arsip_surat_masuk_view_search_id">
	    <field name="name">arsip_surat_masuk.search</field>
	    <field name="model">arsip_surat_masuk</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (search) -->
			<search>
    			<field name="name"/>
   			 	<field name="no_arsip"/> 
   			 	<field name="id_surat_masuk"/> 
			</search>
	    </field> <!-- end arch -->
	</record>
	
	<record model="ir.ui.view" id="arsip_surat_masuk_kanban_id">
	    <field name="name">arsip_surat_masuk.kanban</field>
	    <field name="model">arsip_surat_masuk</field>
	    <field name="arch" type="xml">
			<graph>
			   <field name="name"/>
   			 	<field name="no_arsip"/> 
   			 	<field name="id_surat_masuk"/>
			</graph>
	    </field>  
	</record>

	</data>
</odoo>