<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_pilih_tujuan_wizard" model="ir.ui.view">
		<field name="name">Pilih Tujuan Surat Masuk</field>
		<field name="model">pilih.tujuan.surat</field>
		<field name="arch" type="xml">
			<form string="Pilih Tujuan Surat Masuk">
				<group col="4" colspan="4">
					<!-- <field name="tujuan_id" options="{'no_create':true,'no_open':true}"/> -->
					<field name="tujuan_id" options="{'no_create':true,'no_open':true}" />

				</group>
				<footer>
					<button name="act_pilih" string="Pilih" type="object"
						default_focus="1" class="oe_highlight" />
					
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_pilih_tujuan_wizard" model="ir.actions.act_window">
		<field name="name">Pilih Tujuan Surat Masuk</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">pilih.tujuan.surat</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_pilih_tujuan_wizard" />
		<field name="target">new</field>
	</record>
</odoo>