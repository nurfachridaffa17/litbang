<odoo>
	<data>
		<record model="ir.ui.view" id="form_surat_masuk_fix">
			<field name="name">surat masuk form</field>
			<field name="model">surat_masuk_fix</field>
			<field name="arch" type="xml">
				<form string="surat_maskuk Form">
					<header>
						<!-- <button name="cetak_lbr_dis_kos" type="object" string="Cetak Lembar Disposisi" class="oe_highlight"/>  -->
						<button name="confirm" type="object" string="Confirm" states="Proses" groups="tnde.akses_tnde_tu" class="oe_highlight"/>
						<button name="disposisi_surat" type="object" string="Buat Disposisi" states="Confirm" groups="tnde.disposisi_akses"/>
						<button name="selesai" type="object" string="Selesai" states="Confirm" groups="tnde.disposisi_akses"/> 
						<field name="state" widget="statusbar" statusbar_visible="Proses,Confirm,Selesai"/> 
					</header>
				<sheet>
					
					<group> 
            
            <field name="no_agenda"  groups="base.group_system"/>
			      <field name="no_surat"  groups="base.group_system"/>
            
						<field name="kategori_id" options="{'no_create':True,'no_open':True}"/>
						<field name="jenis_surat" options="{'no_create':true}"/>
						<field name="name"/>
						<field name="asal_surat" />
						
						<field name="tgl_surat" />
						
						<field name="tgl_diterima" />
						<field name="perihal" />
						<field name="sifat_surat" />
						<field name="tujuan_surat" widget="many2many_tags" options="{'no_create':true}"/>
						<field name="tindakan" widget="radio"/>
						<field name="date_due" style="width: 100%"  placeholder="Wajib Diisi"  attrs="{'invisible': [('tindakan','!=','Cepat')]}"/>
						<field name="scan_surat" filename="lampiran" />
						<field name="lampiran" invisible="True" />
						<field name="keterangan" />
					</group>
					
					
					
				</sheet>
				</form>
			</field>
		</record>


		<!--  ________ berita view tree _______-->
	<record model="ir.ui.view" id="surat_masuk_fix_view_tree_id">
	    <field name="name">surat_masuk_fix.list</field>
	    <field name="model">surat_masuk_fix</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (tree) -->
			<tree string="surat_masuk_fix list" colors="red:tindakan=='Cepat' and current_date &gt; date_due " default_order='date_due'> 
				<field name="no_agenda"/>
			    <field name="asal_surat"/>
			    <!-- <field name="date_due"/> -->
			    <field name="name"/>
			    <field name="tujuan_surat"/>
			    <field name="perihal"/>
			    <!-- <field name="sifat_surat"/> -->
				<field name="tindakan" />
				
			    <button name="baca_surat" string="Baca Surat" type="object"/>
    			<button name="view_disposisi" string="View Disposisi" type="object"/>
			</tree>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ berita view search _______-->
	<record model="ir.ui.view" id="surat_masuk_fix_view_search_id">
	    <field name="name">surat_masuk_fix.search</field>
	    <field name="model">surat_masuk_fix</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (search) -->
			<search>
    			<!-- <field name="asal_surat"/>
    			<field name="no_agenda"/>
    			<field name="perihal"/>
			    <field name="tujuan_surat"/>
				<field name="tindakan" /> -->
				<field name="name" />
						<field name="kategori_id" />
						<field name="jenis_surat" />
						<field name="no_agenda" />
			</search>
	    </field> <!-- end arch -->
	</record>

	<record model="ir.ui.view" id="surat_masuk_fix_graph_id">
	    <field name="name">surat_masuk_fix.graph</field>
	    <field name="model">surat_masuk_fix</field>
	    <field name="arch" type="xml">
			<graph>
				<!-- <field name="kategori_id"/>
    			<field name="asal_surat"/>
    			<field name="perihal"/>
				<field name="tindakan" /> -->
				<field name="name" />
						<field name="kategori_id" />
						<field name="jenis_surat" />
						<field name="no_agenda" />
			</graph>
	    </field>  
	</record>
	
	
	</data>
</odoo>