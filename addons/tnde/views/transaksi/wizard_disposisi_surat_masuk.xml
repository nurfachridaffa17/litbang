<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_surat_masuk_wizard" model="ir.ui.view">
        <field name="name">Disposisi Surat Masuk</field>
        <field name="model">surat.masuk.wizard</field>
        <field name="arch" type="xml">
            <form string="Wizard Surat Masuk">
                <group col="4" colspan="4">
                       <!-- <field name="tujuan_id" options="{'no_create':true,'no_open':true}"/> -->
                       <field name="disposisi" options="{'no_create':true,'no_open':true}"/>
                       <field name="ket"/>
                  </group>
                <footer>
                    <button name="act_teruskan" string="Kirim Surat" type="object" default_focus="1" class="oe_highlight"/>
                    
                     <!-- <button name="action_print" string="Print" type="object" default_focus="1" class="oe_highlight"/> -->
                    or
                     <button string="Cancel" class="oe_link" special="cancel"/> 
                </footer>
            </form>
        </field>
    </record>

    <record id="action_surat_masuk_wizard" model="ir.actions.act_window">
        <field name="name">Wizard Surat Masuk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">surat.masuk.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_surat_masuk_wizard"/>
        <field name="target">new</field>
    </record>

    <!-- <menuitem id="menu_surat_masuk" parent="mcs_mahasiswa.menu_siamed_1" sequence="5" action="action_surat_masuk_wizard" groups="mcs_mahasiswa.group_prodi"/> -->
</odoo>