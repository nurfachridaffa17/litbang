<odoo>
	<data>
		<record model="ir.ui.view" id="surat_masuk_view_form_id">
			<field name="name">surat masuk form</field>
			<field name="model">surat_masuk</field>
			<field name="arch" type="xml">
				<form string="surat_maskuk Form">
					<header>
						<button name="confirm" type="object" string="Confirm" states="Proses" groups="tnde.akses_tnde_tu" class="oe_highlight"/> 
						<button name="proses" type="object" string="Buat Disposisi" states="Confirm" groups="tnde.disposisi_akses"/>
						<button name="selesai" type="object" string="Selesai" states="Confirm" groups="tnde.disposisi_akses"/> 
						<field name="state" widget="statusbar" statusbar_visible="Proses,Selesai"/> 
						
					</header>
				<sheet>
					<!-- <div class="oe_title">
						<label for="asal_surat" class="oe_edit_only" string="Asal Surat" />
						<h2>
							
							
						</h2>
					</div>-->
					<group> 
						<field name="kategori_id" options="{'no_create':True,'no_open':True}"/>
						<field name="jenis_surat" options="{'no_create':true}"/>
						<field name="name"/>
						<field name="asal_surat" />
						<field name="no_agenda" invisible="1"/>
						<field name="no_surat" invisible="1"/>
						<field name="tgl_surat" />
						<field name="tgl_diterima" />
						<field name="perihal" />
						<field name="sifat_surat" />
						<field name="tujuan_surat" widget="many2many_tags" options="{'no_create':true}"/>
						<!-- <field name="tujuan_surat" widget="many2many_tags" options="{'no_create':true,'no_open':true}"/> -->
						<field name="tindakan" />
						<field name="scan_surat" filename="lampiran" />
						<field name="lampiran" invisible="1" />
						<field name="keterangan" />
					</group>
					 
					<!-- <field name="disposisi_ids" readonly='1' onclick='false'> 
				        <tree string="kolom-kolom" delete="false" edit="false" create="false" open="false">
				            <field name="create_uid" string="Dari" />
				            <field name="tujuan_id" />
				            <field name="disposisi" />
				            <field name="catatan_disposisi" />
				        </tree>
				    </field> -->
					<!-- <notebook>
					    <page string="History">
					        <field name="tujuan"/>
					    </page>
					</notebook> -->
				</sheet>
				</form>
			</field>
		</record>


		<!--  ________ berita view tree _______-->
	<record model="ir.ui.view" id="surat_masuk_view_tree_id">
	    <field name="name">surat_masuk.list</field>
	    <field name="model">surat_masuk</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (tree) -->
			<tree string="surat_masuk list" default_order='create_date'> 
				<field name="no_agenda"/>
			    <field name="asal_surat"/>
			    <field name="tujuan_surat"/>
			    <field name="perihal"/>
			    <field name="sifat_surat"/>
				<field name="tindakan" />
			    <button name="baca_surat" string="Baca" type="object"/>
    			<button name="view_disposisi" string="View Disposisi" type="object"/>
			</tree>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ berita view search _______-->
	<record model="ir.ui.view" id="surat_masuk_view_search_id">
	    <field name="name">surat_masuk.search</field>
	    <field name="model">surat_masuk</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (search) -->
			<search>
    			<field name="asal_surat"/>
    			<field name="no_agenda"/>
    			<field name="perihal"/>
			    <field name="tujuan_surat"/>
			</search>
	    </field> <!-- end arch -->
	</record>

	<record model="ir.ui.view" id="surat_masuk_graph_id">
	    <field name="name">surat_masuk.graph</field>
	    <field name="model">surat_masuk</field>
	    <field name="arch" type="xml">
			<graph>
				<field name="kategori_id"/>
    			<field name="asal_surat"/>
    			<field name="perihal"/>
			</graph>
	    </field>  
	</record>
	
	
	</data>
</odoo>