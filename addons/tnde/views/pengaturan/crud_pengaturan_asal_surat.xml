<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--  ________ pengaturan_disposisi view tree _______-->
		<record model="ir.ui.view" id="asal_surat_view_tree_id">
		    <field name="name">asal_surat.list</field>
		    <field name="model">asal_surat</field>
		    <field name="arch" type="xml">
		    <!-- Konten: tp_arch_*_component (tree) -->
				<tree string="asal_surat list">
				    <field name="name"/>
	    			<field name="singkatan"/>
				</tree>
		    </field> <!-- end arch -->
		</record>
		
			    
		<record model="ir.ui.view" id="asal_surat_view_form_id">
			<field name="name">asal_surat.form</field>
			<field name="model">asal_surat</field>
			<field name="arch" type="xml">
				<form string="asal_surat Form">
					<header>
						<!-- Tambah Surat Masuk -->
					</header>
				<sheet>
					<div class="oe_title">
						<label for="name" class="oe_edit_only" string="Nama Lembaga / Kantor" />
						<h2>
							<field name="name" />
						</h2>
					</div>
					<group>
						<field name="singkatan" />
					</group>
				</sheet>
				</form>
			</field>
		</record>
	
	
		<record model="ir.ui.view" id="asal_surat_view_search_id">
			<field name="name">asal_surat.search</field>
			<field name="model">asal_surat</field>
			<field name="arch" type="xml">
				<!-- Konten: tp_arch_*_component (search) -->
				<search>
					<field name="name" />
					<field name="singkatan" />
				</search>
			</field> <!-- end arch -->
		</record>
	</data>
</odoo>