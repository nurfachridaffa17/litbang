<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!--  ________ pengaturan_disposisi view tree _______-->
		<record model="ir.ui.view" id="kode_sekunder_view_tree_id">
		    <field name="name">kode_sekunder.list</field>
		    <field name="model">kode_sekunder</field>
		    <field name="arch" type="xml">
		    <!-- Konten: tp_arch_*_component (tree) -->
				<tree string="kode_sekunder list">
				    <field name="name"/>
	    			<field name="kode_primer"/>
	    			<field name="kode_klasifikasi"/>
				</tree>
		    </field> <!-- end arch -->
		</record>
		
			    
		<record model="ir.ui.view" id="kode_sekunder_view_form_id">
			<field name="name">kode_sekunder.form</field>
			<field name="model">kode_sekunder</field>
			<field name="arch" type="xml">
				<form string="kode_sekunder Form">
					<header>
						<!-- Tambah Surat Masuk -->
					</header>
				<sheet>
					<div class="oe_title">
						<label for="name" class="oe_edit_only" string="Kode Klasifikasi" />
						<h2>
							<field name="name" />
						</h2>
					</div>
					<group>
	    				<field name="kode_primer"/>
						<field name="kode_klasifikasi" />
					</group>
				</sheet>
				</form>
			</field>
		</record>
	
	
		<record model="ir.ui.view" id="kode_sekunder_view_search_id">
			<field name="name">kode_sekunder.search</field>
			<field name="model">kode_sekunder</field>
			<field name="arch" type="xml">
				<!-- Konten: tp_arch_*_component (search) -->
				<search>
					<field name="name" />
	    			<field name="kode_primer"/>
					<field name="kode_klasifikasi" />
				</search>
			</field> <!-- end arch -->
		</record>
	</data>
</odoo>