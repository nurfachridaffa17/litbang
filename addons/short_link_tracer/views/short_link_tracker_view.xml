<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
		<record id="whatsapp_survey_share" model="ir.ui.view">
            <field name="name">survey.survey_form</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                        <button name="action_done_show_wizard" string="Get Short Link Tracker" type="object" class="oe_stat_button" icon="fa-external-link-square"/>
                </xpath>
                <xpath expr="//notebook" position="before">
					<group>
						<field name="short_link_tracker" widget="url"/>
					</group>
			   </xpath>
            </field>
        </record>
    </data>
    

</odoo>
