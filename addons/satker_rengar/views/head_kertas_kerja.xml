<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
        <record id="head_kertas_kerja_form_view" model="ir.ui.view">
            <field name="name">head.kertas.kerja.form.view</field>
            <field name="model">head.kertas.kerja</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Indikatif" name="get_confirm" states="draft" type="object" class="oe_highlight" groups="satker_rengar.group_rengar_user"/>
                        <button string="Pagu Anggaran" name="get_apprv_hr_manager" states="confirm" type="object" groups="satker_rengar.group_rengar_manager" class="oe_highlight"/>
                        <button string="Alokasi Anggaran" name="get_paid" states="approved_hr_manager" type="object" groups="satker_rengar.group_rengar_manager" class="oe_highlight o_expense_sheet_approve"/>
                        <button string="Selesai" class="oe_highlight" name="get_done" states="paid" type="object" groups="satker_rengar.group_rengar_manager"/>
                        <button string="Tolak" name="get_reject" states="confirm" type="object" groups="satker_rengar.group_rengar_manager"/>
                        <button string="Batal" name="exit_cancel" states="draft" type="object" groups="satker_rengar.group_rengar_manager"/>
                        <button string="Set to Draft" name="request_set" states="reject" type="object" groups="satker_rengar.group_rengar_manager"/>
                        <!-- <button string="Buat Project" name="create_project" states="paid" type="object"/> -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approved_hr_manager,paid,done" colspan="2"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="show_journal" string="Journal" icon="fa-bars" attrs="{'invisible': [('is_paid', '=', False)]}">
                            </button>
                            <button class="oe_stat_button" type="object" name="view_line" string="Rincian" icon="fa-list" attrs="{'invisible': [('advance_expense_line_ids', '=', False)]}">
                            </button>
                        </div>
                        <div class="oe_title">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                         </div>
                        <group>
                            <group>
                                <field name="employee_id" invisible="1"/>
                            </group>
                            <group/>
                        </group>
                        <group>
                            <group>
                                <field name="department_id" invisible="1"/>
                                <field name="request_date" invisible="1"/>
                                <field name="tahun_anggaran"/>
                                <field name="total_amount_expense" string="Pagu" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="job_id" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <field name="rengar_program" required="True" attrs="{'readonly': [('state', 'in', ['done'])]}"/>
                        </group>
                        <notebook>
                            <page name="advance" string="Rincian Program">
                                <field name="advance_expense_line_ids" attrs="{'readonly': [('state', 'in', ['done'])]}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="rengar_kegiatan" options="{'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                                        <field name="rengar_output" options="{'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                                        <field name="rengar_suboutput" options="{'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                                        <field name="rengar_komponen" options="{'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                                        <field name="rengar_subkomponen" options="{'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                                        <!-- <field name="department_id"/> -->
                                        <field name="department_ids" widget="many2many_tags" options="{'no_open': True,'no_create': 1, 'no_create_edit': 1}"/>
                                        <field name="state"/>
                                        <field name="advance_expense_line_ids" string="Records"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="general" string="General Information">
                                <group>
                                    <group>
                                        <field name="confirm_date"/>
                                        <field name="hr_validate_date"/>
                                        <field name="account_validate_date"/>
                                    </group>
                                    <group>
                                        <field name="confirm_by_id"/>
                                        <field name="hr_manager_by_id"/>
                                        <field name="account_by_id"/>
                                    </group>
                                </group>
                            </page>
                            <page name="accounting" string="Accounting Information" groups="account.group_account_user" invisible="1">
                                <group>
                                    <group>
                                        <field name="partner_id" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}" groups="account.group_account_user"/>
                                        <field name="journal_id" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}" groups="account.group_account_user"/>
                                        <field name="account_id" groups="account.group_account_user" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}"/>
                                        <field name="paid_in_currency" groups="account.group_account_user"/>
                                        <field name="paid_amount" widget="monetary" options="{'currency_field': 'paid_in_currency'}" groups="account.group_account_user"/>
                                        <field name="move_id"/>
                                        <field name="is_paid" invisible="1"/>
                                    </group>
                                    <group/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="satker_rengar.group_rengar_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="head_kertas_kerja_tree_view" model="ir.ui.view">
            <field name="name">head.kertas.kerja.tree.view</field>
            <field name="model">head.kertas.kerja</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date" string="Tanggal"/>
                    <field name="tahun_anggaran"/>
                    <field name="rengar_program" string="Nama Program"/>
                    <field name="total_amount_expense" string="Pagu (Rp.)"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>

        <record id="head_kertas_kerja_search_view" model="ir.ui.view">
            <field name="name">head.kertas.kerja.search.view</field>
            <field name="model">head.kertas.kerja</field>
            <field name="arch" type="xml">
                <search string="Head Kertas Kerja" >
                    <field name="employee_id" />
                    <field name="name"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="company_id"/>
                    <field name="request_date"/>
                    <field name="confirm_date"/>
                    <field name="hr_validate_date"/>
                    <field name="account_validate_date"/>
                    <field name="confirm_by_id"/>
                    <field name="hr_manager_by_id"/>
                    <field name="account_by_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter string="Nama Program" context="{'group_by':'rengar_program'}"/>
                        <filter string="State" context="{'group_by':'state'}"/>
                        <filter string="Company" context="{'group_by':'company_id'}"/>
                        <filter string="Name" context="{'group_by':'name'}"/>
                        <filter string="Request Date" context="{'group_by':'request_date'}"/>
                        <filter string="Confirm Date" context="{'group_by':'confirm_date'}"/>
                        <filter string="Approved Date" context="{'group_by':'hr_validate_date'}"/>
                        <filter string="Paid Date" context="{'group_by':'account_validate_date'}"/>
                        <filter string="Confirm By" context="{'group_by':'confirm_by_id'}"/>
                        <filter string="Approved By" context="{'group_by':'hr_manager_by_id'}"/>
                        <filter string="Paid By" context="{'group_by':'account_by_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_head_kertas_kerja">
            <field name="name">Rencana Program</field>
            <field name="res_model">head.kertas.kerja</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <record model="ir.actions.act_window" id="action_head_kertas_kerja_approve">
            <field name="name">Proses Persetujuan</field>
            <field name="res_model">head.kertas.kerja</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'confirm')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_head_kertas_kerja_paid">
            <field name="name">Proses Pembayaran</field>
            <field name="res_model">head.kertas.kerja</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'approved_hr_manager')]</field>
        </record>

    </data>
</odoo>