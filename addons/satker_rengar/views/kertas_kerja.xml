<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
        <record id="kertas_kerja_form_view" model="ir.ui.view">
            <field name="name">kertas.kerja.form.view</field>
            <field name="model">kertas.kerja</field>
            <field name="arch" type="xml">
                <form>
                    <header invisible="1">
                        <button string="Lanjut" name="get_confirm" states="draft" type="object" class="oe_highlight" groups="satker_rengar.group_rengar_user"/>
                        <button string="Setujui" name="get_apprv_hr_manager" states="confirm" type="object" groups="satker_rengar.group_rengar_office" class="oe_highlight"/>
                        <button string="Alokasi" name="action_sheet_move_advance" states="approved_hr_manager" type="object" groups="account.group_account_user" class="oe_highlight o_expense_sheet_approve"/>
                        <button string="Selesai" class="oe_highlight" name="get_done" states="paid" type="object" groups="satker_rengar.group_rengar_office,account.group_account_user"/>
                        <button string="Tolak" name="get_reject" states="confirm" type="object" groups="satker_rengar.group_rengar_office"/>
                        <button string="Batal" name="exit_cancel" states="draft" type="object" groups="satker_rengar.group_rengar_office"/>
                        <button string="Set to Draft" name="request_set" states="reject" type="object"/>
                        <button string="Buat Project" name="create_project" states="paid" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approved_hr_manager,paid,done" colspan="2"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="show_journal" string="Journal" icon="fa-bars" attrs="{'invisible': [('is_paid', '=', False)]}">
                            </button>
                            <button class="oe_stat_button" type="object" name="view_line" string="Rincian" icon="fa-list" attrs="{'invisible': [('advance_expense_line_ids', '=', False)]}">
                            </button>
                        </div>
                        <div class="oe_title">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                         </div>
                        <group invisible="1">
                            <group>
                                <field name="employee_id" string="Karyawan"/>
                            </group>
                            <group/>
                        </group>
                        <group invisible="1">
                            <group>
                                <field name="department_id"/>
                                <field name="request_date"/>
                                <field name="total_amount_expense" string="Pagu" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="job_id"/>
                                <field name="user_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group string="Kertas Kerja">
                            <field name="rengar_kegiatan" attrs="{'readonly': [('state', 'in', ['done','paid'])]}"/>
                            <label for="code_output" string="Nama Output" attrs="{'invisible': [('rengar_kegiatan', '=', False)]}"/>
                            <div>
                                <field name="code_output" nolabel="1"/>
                                <field name="rengar_output" class="oe_edit_only" nolabel="1" attrs="{'invisible': [('rengar_kegiatan', '=', False)], 'readonly': [('state', 'in', ['done','paid'])]}"/>
                            </div>
                            <label for="code_suboutput" string="Nama Sub Output" attrs="{'invisible': [('rengar_output', '=', False)]}"/>
                            <div>
                                <field name="code_suboutput" nolabel="1"/>
                                <field name="rengar_suboutput" class="oe_edit_only" nolabel="1" attrs="{'invisible': [('rengar_output', '=', False)], 'readonly': [('state', 'in', ['done','paid'])]}"/>
                            </div>
                            <field name="total_amount_expense" string="Jumlah Biaya"/>
                            <!-- <field name="rengar_komponen" attrs="{'invisible': [('rengar_output', '=', False)], 'readonly': [('state', 'in', ['done','paid'])]}"/> -->
                        </group>
                        <notebook>
                            <page name="advance" string="Rincian Kegiatan">
                                <field name="advance_expense_line_ids" attrs="{'readonly': [('state', 'in', ['done'])]}">
                                    <tree>
                                        <field name="employee_id"/>
                                        <field name="department_id"/>
                                        <field name="advance_line_id"/>
                                        <!-- <field name="rengar_komponen"/> -->
                                        <!-- <field name="rengar_subkomponen"/> -->
                                        <field name="note"/>
                                        <field name="product_id" invisible="1"/>
                                        <field name="description" invisible="1"/>
                                        <field name="quantity" string="Volume"/>
                                        <field name="unit_amount" string="Harga Satuan" required="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="product_uom_id" invisible="1" string="Unit of Measure" groups="product.group_uom" readonly="1"/>
                                        <!-- <field name="currency_id"/> -->
                                        <field name="total_amount" string="Jumlah Biaya" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="state" string="Status"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="general" string="General Information" invisible="1">
                                <group>
                                    <group>
                                        <field name="confirm_date"/>
                                        <field name="hr_validate_date"/>
                                        <field name="account_validate_date"/>
                                    </group>
                                    <group>
                                        <field name="confirm_by_id"/>
                                        <field name="hr_manager_by_id"/>
                                        <field name="account_by_id"/>
                                    </group>
                                </group>
                            </page>
                            <page name="accounting" string="Accounting Information" groups="account.group_account_user" invisible="1">
                                <group>
                                    <group>
                                         <field name="partner_id" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}" groups="account.group_account_user"/>
                                         <field name="journal_id" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}" groups="account.group_account_user"/>
                                         <field name="account_id" groups="account.group_account_user" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}"/>
                                         <field name="paid_in_currency" groups="account.group_account_user"/>
                                         <field name="paid_amount" widget="monetary" options="{'currency_field': 'paid_in_currency'}" groups="account.group_account_user"/>
                                         <field name="move_id"/>
                                         <field name="is_paid" invisible="1"/>
                                    </group>
                                    <group/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="satker_rengar.group_rengar_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
       
        <record id="kertas_kerja_tree_view" model="ir.ui.view">
            <field name="name">kertas.kerja.tree.view</field>
            <field name="model">kertas.kerja</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="rengar_kegiatan"/>
                    <field name="rengar_output"/>
                    <field name="rengar_suboutput"/>
                    <field name="rengar_komponen"/>
                    <field name="rengar_subkomponen"/>
                    <!-- <field name="department_id"/> -->
                    <field name="department_ids" widget="many2many_tags"/>
                    <field name="state"/>
                    <field name="advance_expense_line_ids" string="Records"/>
                </tree>
            </field>
        </record>
        
        <record id="kertas_kerja_search_view" model="ir.ui.view">
            <field name="name">kertas.kerja.search.view</field>
            <field name="model">kertas.kerja</field>
            <field name="arch" type="xml">
                <search string="Kertas Kerja" >
                    <field name="employee_id" />
                    <field name="name"/>
                    <field name="currency_id"/>
                    <field name="state"/>
                    <field name="company_id"/>
                    <field name="request_date"/>
                    <field name="confirm_date"/>
                    <field name="hr_validate_date"/>
                    <field name="account_validate_date"/>
                    <field name="confirm_by_id"/>
                    <field name="hr_manager_by_id"/>
                    <field name="account_by_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" context="{'group_by':'employee_id'}"/>
                        <filter string="Nama Kegiatan" context="{'group_by':'rengar_kegiatan'}"/>
                        <filter string="Nama Output" context="{'group_by':'code_output'}"/>
                        <filter string="Nama Sub Output" context="{'group_by':'code_suboutput'}"/>
                        <filter string="Nama Komponen" context="{'group_by':'rengar_komponen'}"/>
                        <filter string="State" context="{'group_by':'state'}"/>
                        <filter string="Company" context="{'group_by':'company_id'}"/>
                        <filter string="Name" context="{'group_by':'name'}"/>
                        <filter string="Request Date" context="{'group_by':'request_date'}"/>
                        <filter string="Confirm Date" context="{'group_by':'confirm_date'}"/>
                        <filter string="Approved Date" context="{'group_by':'hr_validate_date'}"/>
                        <filter string="Paid Date" context="{'group_by':'account_validate_date'}"/>
                        <filter string="Confirm By" context="{'group_by':'confirm_by_id'}"/>
                        <filter string="Approved By" context="{'group_by':'hr_manager_by_id'}"/>
                        <filter string="Paid By" context="{'group_by':'account_by_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
