<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>
        <record id="head_kertas_kerja_realisasi_form_view" model="ir.ui.view">
            <field name="name">head_kertas_kerja_realisasi_form_view</field>
            <field name="model">head.kertas.kerja</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Selesai" class="oe_highlight" name="get_done" states="paid" type="object" groups="satker_rengar.group_rengar_office,account.group_account_user"/>
                        <button string="Tolak" name="get_reject" states="confirm" type="object" groups="satker_rengar.group_rengar_office"/>
                        <button string="Set to Draft" name="request_set" states="reject" type="object"/>
                        <button string="Buat Project" name="create_project" states="paid" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="confirm,done" colspan="2"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="show_journal" string="Journal" icon="fa-bars" attrs="{'invisible': [('is_paid', '=', False)]}">
                            </button>
                            <button class="oe_stat_button" type="object" name="view_line" string="Rincian" icon="fa-list">
                            </button>
                        </div>
                        <div class="oe_title">
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                         </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                            </group>
                            <group/>
                        </group>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="request_date"/>
                                <field name="tahun_anggaran"/>
                                <field name="total_amount_expense" string="Pagu" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_realisasi" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="job_id"/>
                                <field name="user_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <field name="rengar_program" required="True" attrs="{'readonly': [('state', 'in', ['done'])]}"/>
                        </group>
                        <notebook>
                            <page name="advance" string="Rincian Program">
                                <field name="advance_expense_line_ids" attrs="{'readonly': [('state', 'in', ['done'])]}">
                                    <tree>
                                        <field name="request_date" string="Tanggal"/>
                                        <field name="rengar_kegiatan" string="Nama Kegiatan"/>
                                        <field name="total_amount_expense" string="Jumlah Biaya"/>
                                        <field name="total_realisasi" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="state" invisible="1"/>
                                    </tree>
                                    <form>
                                        <div class="oe_button_box" name="button_box">
                                            <button class="oe_stat_button" type="object" name="view_line" string="Rincian" icon="fa-list" attrs="{'invisible': [('advance_expense_line_ids', '=', False)]}">
                                            </button>
                                        </div>
                                        <div class="oe_title">
                                            <div class="oe_title">
                                                <h1>
                                                    <field name="name" readonly="1"/>
                                                    <field name="state" invisible="1"/>
                                                </h1>
                                            </div>
                                         </div>
                                        <group string="Kertas Kerja">
                                            <field name="rengar_kegiatan" attrs="{'readonly': [('state', 'in', ['done','paid'])]}"/>
                                            <label for="code_output" string="Nama Output" attrs="{'invisible': [('rengar_kegiatan', '=', False)]}"/>
                                            <div>
                                                <field name="code_output" nolabel="1"/>
                                                <field name="rengar_output" class="oe_edit_only" nolabel="1" attrs="{'invisible': [('rengar_kegiatan', '=', False)], 'readonly': [('state', 'in', ['done','paid'])]}"/>
                                            </div>
                                            <label for="code_suboutput" string="Nama Sub Output" attrs="{'invisible': [('rengar_output', '=', False)]}"/>
                                            <div>
                                                <field name="code_suboutput" nolabel="1"/>
                                                <field name="rengar_suboutput" class="oe_edit_only" nolabel="1" attrs="{'invisible': [('rengar_output', '=', False)], 'readonly': [('state', 'in', ['done','paid'])]}"/>
                                            </div>
                                            <field name="total_amount_expense" string="Jumlah Biaya"/>
                                            <field name="total_realisasi" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </group>
                                        <notebook>
                                            <page name="advance" string="Rincian Kegiatan">
                                                <field name="advance_expense_line_ids" attrs="{'readonly': [('state', 'in', ['done'])]}">
                                                    <tree>
                                                        <field name="rengar_komponen"/>
                                                        <field name="rengar_subkomponen"/>
                                                        <field name="product_id" invisible="1"/>
                                                        <field name="description" invisible="1"/>
                                                        <field name="quantity" string="Volume"/>
                                                        <field name="unit_amount" string="Harga Satuan" required="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                                        <field name="product_uom_id" invisible="1" string="Unit of Measure" groups="product.group_uom" readonly="1"/>
                                                        <field name="total_amount" string="Jumlah Biaya" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                                        <field name="total_realisasi" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                                        <field name="state" string="Status" invisible="1"/>
                                                    </tree>
                                                    <form>
                                                        <group>
                                                            <field name="rengar_komponen" required="1" readonly="1"/>
                                                            <field name="rengar_subkomponen" required="1" readonly="1"/>
                                                            <field name="total_amount" string="Jumlah Biaya" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                                            <field name="total_realisasi" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                                            <field name="state" string="Status" invisible="1"/>
                                                        </group>
                                                        <notebook>
                                                            <page string="Detail">
                                                                <field name="advance_expense_line_ids">
                                                                    <tree editable="bottom">
                                                                        <field name="detail1" string="Detail &gt;" readonly="1"/>
                                                                        <field name="detail2" string="Detail &gt;&gt;" readonly="1"/>
                                                                        <field name="detail3" required="1" readonly="1"/>
                                                                        <field name="quantity" string="Volume" readonly="1"/>
                                                                        <field name="unit_amount" string="Harga Satuan" required="1" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                                                        <field name="product_uom_id" string="Unit of Measure" groups="product.group_uom" readonly="1"/>
                                                                        <field name="total_amount" string="Jumlah Biaya" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                                                        <field name="realisasi_amount"/>
                                                                    </tree>
                                                                </field>
                                                            </page>
                                                        </notebook>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </page>
                            <page name="general" string="General Information">
                                <group>
                                    <group>
                                        <field name="confirm_date"/>
                                        <field name="hr_validate_date"/>
                                        <field name="account_validate_date"/>
                                    </group>
                                    <group>
                                        <field name="confirm_by_id"/>
                                        <field name="hr_manager_by_id"/>
                                        <field name="account_by_id"/>
                                    </group>
                                </group>
                            </page>
                            <page name="accounting" string="Accounting Information" groups="account.group_account_user">
                                <group>
                                    <group>
                                        <field name="partner_id" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}" groups="account.group_account_user"/>
                                        <field name="journal_id" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}" groups="account.group_account_user"/>
                                        <field name="account_id" groups="account.group_account_user" attrs="{'readonly': ['|', ('state', '=', 'done'), ('state', '=', 'paid')]}"/>
                                        <field name="paid_in_currency" groups="account.group_account_user"/>
                                        <field name="paid_amount" widget="monetary" options="{'currency_field': 'paid_in_currency'}" groups="account.group_account_user"/>
                                        <field name="move_id"/>
                                        <field name="is_paid" invisible="1"/>
                                    </group>
                                    <group/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="satker_rengar.group_rengar_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="head_kertas_kerja_realisasi_tree_view" model="ir.ui.view">
            <field name="name">head_kertas_kerja_realisasi_tree_view</field>
            <field name="model">head.kertas.kerja</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="request_date" string="Tanggal"/>
                    <field name="rengar_program" string="Nama Program"/>
                    <field name="total_amount_expense" string="Pagu (Rp.)"/>
                    <field name="total_realisasi" string="Realisasi"/>
                    <field name="persen_realisasi"/>
                    <field name="sisa_realisasi"/>
                    <field name="persen_sisa"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>

        <record id="head_kertas_kerja_realisasi_pivot_view" model="ir.ui.view">
            <field name="name">head_kertas_kerja_realisasi_pivot_view</field>
            <field name="model">head.kertas.kerja</field>
            <field name="arch" type="xml">
                <pivot string="Monitoring Evaluasi">
                    <field name="rengar_program" type="row"/>
                    <field name="write_date" type="col"/>
                    <field name="total_amount_expense" type="measure"/>
                    <field name="total_realisasi" type="measure"/>
                    <field name="persen_realisasi" type="measure"/>
                    <field name="sisa_realisasi" type="measure"/>
                    <field name="persen_sisa" type="measure"/>
                </pivot>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_head_kertas_kerja_realisasi">
            <field name="name">Proses Realisasi</field>
            <field name="res_model">head.kertas.kerja</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'paid')]</field>
        </record>

        <record model="ir.actions.act_window.view" id="action_head_kertas_kerja_realisasi_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="head_kertas_kerja_realisasi_tree_view"/>
            <field name="act_window_id" ref="action_head_kertas_kerja_realisasi"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_head_kertas_kerja_realisasi_form">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="head_kertas_kerja_realisasi_form_view"/>
            <field name="act_window_id" ref="action_head_kertas_kerja_realisasi"/>
        </record>

        <!-- <record model="ir.actions.act_window" id="action_head_kertas_kerja_realisasi_approve">
            <field name="name">Proses Realisasi</field>
            <field name="res_model">head.kertas.kerja</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'confirm')]</field>
        </record> -->
        
        <record model="ir.actions.act_window" id="action_head_kertas_kerja_realisasi_paid">
            <field name="name">Sudah Terealisasi</field>
            <field name="res_model">head.kertas.kerja</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('state', '=', 'done')]</field>
        </record>

        <record model="ir.actions.act_window" id="action_monitoring_evaluasi">
            <field name="name">Monitoring Evaluasi</field>
            <field name="res_model">head.kertas.kerja</field>
            <field name="view_mode">pivot,graph,tree,kanban,form</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
        </record>

    </data>
</odoo>