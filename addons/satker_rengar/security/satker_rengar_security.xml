<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- head.kertas.kerja -->
        <record id="head_advance_exp_employee_rule" model="ir.rule">
            <field name="name">Head Advance Expense Employee</field>
            <field name="model_id" ref="model_head_kertas_kerja"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('satker_rengar.group_rengar_user')), (4, ref('satker_rengar.group_rengar_office')), (4, ref('satker_rengar.group_rengar_manager'))]"/>
        </record>
        <!-- head.kertas.kerja -->

        <!-- kertas.kerja -->
        <record id="advance_exp_employee_rule" model="ir.rule">
            <field name="name">Advance Expense Employee</field>
            <field name="model_id" ref="model_kertas_kerja"/>
            <!-- <field name="domain_force">[('user_id','=',user.id)]</field> -->
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('satker_rengar.group_rengar_user'))]"/>
        </record>

        <record id="advance_exp_officer_rule" model="ir.rule">
            <field name="name">Advance Expense Officer</field>
            <field name="model_id" ref="model_kertas_kerja"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('satker_rengar.group_rengar_office'))]"/>
        </record>

        <record id="advance_exp_account_rule" model="ir.rule">
            <field name="name">Advance Account Officer</field>
            <field name="model_id" ref="model_kertas_kerja"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        </record>
        <!-- kertas.kerja -->

        <!-- advance.expense.line -->
        <record id="advance_exp_line_employee_rule" model="ir.rule">
            <field name="name">Advance Expense Line Employee</field>
            <field name="model_id" ref="model_advance_expense_line"/>
            <field name="domain_force">[('department_id','=',user.employee_ids.department_id.id)]</field>
            <field name="groups" eval="[(4, ref('satker_rengar.group_rengar_user'))]"/>
        </record>

        <record id="advance_exp_line_manager_rule" model="ir.rule">
            <field name="name">Advance Expense Line Manager</field>
            <field name="model_id" ref="model_advance_expense_line"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('satker_rengar.group_rengar_office')), (4, ref('satker_rengar.group_rengar_manager'))]"/>
        </record>
        <!-- advance.expense.line -->
    </data>
</odoo>