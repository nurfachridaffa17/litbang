<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hr_bank_summary_report_tmp">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div>
                            <table width="100%">
                                <tr>
                                    <th width="15%">Company</th>
                                    <th width="5%" align="center">:</th>
                                    <td width="30%"><span t-esc="res_company.name" /></td>
                                    <th width="50%" style='text-align:right;'>By Bank</th>
                                </tr>
                                <tr>
                                    <th width="15%">Periods</th>
                                    <th width="5%" align="center">:</th>
                                    <td width="30%">
                                        <span
                                            t-esc="datetime.datetime.strptime(data.get('date_start','') , '%Y-%m-%d').strftime('%d-%m-%Y')" />
                                        to
                                        <span 
                                            t-esc="datetime.datetime.strptime(data.get('date_end','') , '%Y-%m-%d').strftime('%d-%m-%Y')" />
                                    </td>
                                    <th width="50%"></th>
                                </tr>
                                <tr>
                                    <th width="15%">Total Records</th>
                                    <th width="5%" align="center">:</th>
                                    <td width="30%"><span t-esc="get_totalrecord" /></td>
                                    <th width="50%"></th>
                                </tr>
                            </table>
                        </div>
                        <br/>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        Employee Name
                                    </th>
                                    <th class="text-center">
                                        Employee Login
                                    </th>
                                    <th class="text-center">
                                        Name Of Bank
                                    </th>
                                    <th class="text-center">
                                        Account Number
                                    </th>
                                    <th class="text-center">
                                        Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="get_info" t-as="payslip_data">
                                    <tr t-foreach="payslip_data.get('lines')" t-as="line">
                                        <td class="text-center">
                                            <span t-esc="line.get('employee_name', False)" />
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line.get('employee_id', False)" />
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line.get('bank_name', False)" />
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line.get('account_number', False)" />
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line.get('amount') or 0.00"
                                                t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                                    <t  t-foreach="payslip_data.get('departmane_total')" t-as="dept_data">
                                        <tr>
                                            <td colspan="3">
                                                <b>
                                                    <span t-esc="dept_data.get('department_name', False)" />
                                                </b>
                                            </td>
                                            <td colspan="2">
                                                <b>
                                                    <span t-esc="dept_data.get('total')"
                                                        t-options="{'widget': 'monetary', 
                                                        'display_currency': res_company.currency_id}" />
                                                </b>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                        <div class="row" style="page-break-inside: avoid;">
                            <div class="col-xs-7 pull-right">
                                <table class="table table-condensed">
                                    <thead>
                                    <tr>
                                        <th colspan="3">Overall Total</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="get_info" t-as="payslip_data">
                                            <t t-foreach="payslip_data.get('departmane_total')" t-as="dept_data">
                                                <tr class="text-right">
                                                    <th>
                                                        <t t-esc="dept_data.get('department_name',False)" />
                                                    </th>
                                                    <th>:</th>
                                                    <td align="left">
                                                        <t t-esc="dept_data.get('total') or 0.00"
                                                            t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr style="border-top:1px solid #000000;">
                                            <th>ALL</th>
                                            <th>:</th>
                                            <td align="left">
                                                <t t-esc="get_total or 0.00"
                                                    t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>