<odoo>
  <data>
	<!--  ________ berkas_finalisasi view form _______-->
	<record model="ir.ui.view" id="berkas_finalisasi_view_form_id">
	    <field name="name">berkas_finalisasi.form</field>
	    <field name="model">rikwastu.berkas_finalisasi</field>
	    <field name="arch" type="xml">
	   	<!-- Konten: tp_arch_*_component (form) -->
			<form string="berkas_finalisasi Form">
			    <header>
					<!-- tp_button_workflow_db, tp_button_workflow_engine disini -->
					<!-- tp_button_smart_button disini -->
			    </header>
            	<sheet>
              		<group> 
						<field name="name"/> 
						<field name="program"/> 
						<field name="step"/> 
						<field name="kepada"/> 
						<field name="jenis_surat" options="{'no_create':true}"/>
						<field name="scan_surat" filename="lampiran" />
						<field name="lampiran" invisible="1" />
					</group>
					<group >				
						<field name="keterangan" widget="html"/>
					</group>
              	</sheet>
        	</form>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ berkas_finalisasi view tree _______-->
	<record model="ir.ui.view" id="berkas_finalisasi_view_tree_id">
	    <field name="name">berkas_finalisasi.list</field>
	    <field name="model">rikwastu.berkas_finalisasi</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (tree) -->
			<tree string="berkas_finalisasi list">
			    <field name="program" />
				<field name="kepada" />
				<field name="jenis_surat" />
			</tree>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ berkas_finalisasi view search _______-->
	<record model="ir.ui.view" id="berkas_finalisasi_view_search_id">
	    <field name="name">berkas_finalisasi.search</field>
	    <field name="model">rikwastu.berkas_finalisasi</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (search) -->
			<search>
    			<field name="name"/>
			</search>
	    </field> <!-- end arch -->
	</record>
	
  </data>	
</odoo>