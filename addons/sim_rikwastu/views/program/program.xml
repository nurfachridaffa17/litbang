<odoo>
	<data>
		<record model="ir.ui.view" id="program_view_form_id">
			<field name="name">Program Kegiatan</field>
			<field name="model">program</field>
			<field name="arch" type="xml">
				<form string="program Form">
					<header>
						<button name="confirm" type="object" string="Confirm" states="Proses" class="oe_highlight"/> 
						<field name="state" widget="statusbar" statusbar_visible="Proses , Done"/> 
						<field name="state_tahapan" widget="statusbar" statusbar_visible="Tahapan Perencanaan,Tahapan Pelaksanaan, Tahapan Akhir"/> 
					</header>
				<sheet>
					<group> 
						<field name="name"/>
						<field name="objek" />
						<field name="divisi" />
						<field name="thn" />
						<field name="ket" />
					</group>
				 	<group string="Tahap Perencanaan">
                    	<field name="perencanaan_ids" nolabel="1" colspan="4" readonly="1">
		                    <tree string="Perencanaan" editable="bottom">
								<field name="step"/>
		                       	<field name="name"/> 
								<field name="kepada" />
								<field name="jenis_surat"/>
								<field name="state" />
		                    </tree>
		            	</field> 
					</group>
					
				</sheet>
				</form>
			</field>
		</record>


		<!--  ________ berita view tree _______-->
	<record model="ir.ui.view" id="program_view_tree_id">
	    <field name="name">program.list</field>
	    <field name="model">program</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (tree) -->
			<tree string="program list"> 
				<field name="name"/>
				<field name="objek" />
				<field name="divisi" />
				<field name="thn" />
				<field name="ket" />
			</tree>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ berita view search _______-->
	<record model="ir.ui.view" id="program_view_search_id">
	    <field name="name">program.search</field>
	    <field name="model">program</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (search) -->
			<search>
    			<field name="name"/>
				<field name="objek" />
				<field name="divisi" />
				<field name="thn" />
				<field name="ket" />
			</search>
	    </field> <!-- end arch -->
	</record>

	<record model="ir.ui.view" id="program_graph_id">
	    <field name="name">program.graph</field>
	    <field name="model">program</field>
	    <field name="arch" type="xml">
			<graph>
				<field name="name"/>
				<field name="objek" />
				<field name="divisi" />
				<field name="thn" />
				<field name="ket" />
			</graph>
	    </field>  
	</record>
	
	<record model="ir.ui.view" id="program_kanban_id">
	    <field name="name">program.kanban</field>
	    <field name="model">program</field>
	    <field name="arch" type="xml">
	        <kanban default_group_by="state_tahapan">
	            <templates>
	                <t t-name="kanban-box">
	                    <div >
	                         
	                        <div class="o_dropdown_kanban dropdown">
	                            <!-- MENU DROPDOWN -->
	                            <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" >
	                                <span class="fa fa-bars fa-lg"/>
	                            </a>
	                            
	                        </div>
	                         
	                        <div t-attf-class="oe_kanban_content" >
	                           	<field name="name"/>
	                           	<br/>
	                           	<br/>
	                           	<br/>
								<field name="objek" />
	                           	<br/>
	                           	<br/>
								<field name="divisi" />
	                        </div>
	                    </div>
	                </t>
	            </templates>
	        </kanban>
			
	    </field>  
	</record>
	
	</data>
</odoo>
