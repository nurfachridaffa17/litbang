<odoo>
  <data>
	<!--  ________ langkah_kerja view form _______-->
	<record model="ir.ui.view" id="langkah_kerja_view_form_id">
	    <field name="name">langkah_kerja.form</field>
	    <field name="model">rikwastu.langkah_kerja</field>
	    <field name="arch" type="xml">
	   	<!-- Konten: tp_arch_*_component (form) -->
			<form string="langkah_kerja Form">
			    <header>
					<!-- tp_button_workflow_db, tp_button_workflow_engine disini -->
					<!-- tp_button_smart_button disini -->
			    </header>
            	<sheet>
              		<div class="oe_title">
         				<label for="name" class="oe_edit_only" string="Nama" />
         				<h1><field name="name"/></h1>
         			</div>
 						
                  <group>
                  		
                  </group>
              	</sheet>
        	</form>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ langkah_kerja view tree _______-->
	<record model="ir.ui.view" id="langkah_kerja_view_tree_id">
	    <field name="name">langkah_kerja.list</field>
	    <field name="model">rikwastu.langkah_kerja</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (tree) -->
			<tree string="langkah_kerja list" editable="bottom">
			    <field name="name" string="Nama Kegiatan" readonly="1"/>
				<field name="tgl_mulai" readonly="1"/>
				<field name="tgl_akhir" readonly="1"/>
				<field name="status_pekerjaan" />
				<field name="dok_pendukung_ids" widget="many2many_binary" sting="Dokumen Hasil Kegiatan" />
				<field name="keterangan" />
			</tree>
	    </field> <!-- end arch -->
	</record>
	
	<!--  ________ langkah_kerja view search _______-->
	<record model="ir.ui.view" id="langkah_kerja_view_search_id">
	    <field name="name">langkah_kerja.search</field>
	    <field name="model">rikwastu.langkah_kerja</field>
	    <field name="arch" type="xml">
	    <!-- Konten: tp_arch_*_component (search) -->
			<search>
    			<field name="name"/>
			</search>
	    </field> <!-- end arch -->
	</record>
	
  </data>	
</odoo>