<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="js_abstract" inherit_id="web.assets_backend">
        <xpath expr="script[@src='/web/static/src/js/abstract_web_client.js']" position="replace">
            <script type="text/javascript" src="/web_extend_db_manager_layout/static/src/js/abstract_web_client.js"></script>
        </xpath>
    </template>

    <template id="logo_change" inherit_id="web.layout">
        <xpath expr="//html" position="replace">
            <html t-att="html_data or {}">
                <head>
                    <meta charset="utf-8"/>
                    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no"/>

                    <title t-esc="title or 'SIPPOL'"/>
                    <link type="image/x-icon" rel="shortcut icon" t-att-href="x_icon or '/web_extend_db_manager_layout/static/src/img/sippol.png'"/>

                    <script type="text/javascript">
                        var odoo = {
                            csrf_token: "<t t-esc="request.csrf_token(None)"/>",
                        };
                    </script>

                    <t t-raw="head or ''"/>
                </head>
                <body t-att-class="body_classname">
                    <t t-raw="0"/>
                </body>
            </html>
        </xpath>
    </template>

    <template id="powered_by_trabaud" inherit_id="web.login_layout">
        <xpath expr="//t/div" position="replace">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 o_database_list">
                    <div class="text-center">
                        <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"/>
                    </div>
                    <t t-raw="0"/>
                    <div class="text-center" t-if="not disable_footer">
                        <t t-if="not disable_database_manager">
                            <a class="" href="/web/database/manager">Manage Databases</a> |
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>